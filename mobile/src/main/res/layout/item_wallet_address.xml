<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageButton
            android:text="Button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/btnMore"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:padding="14dp"
            android:background="?selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_more_vert_grey_600_18dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/tvAddress"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/tvAddress"
            app:layout_constraintBottom_toBottomOf="@+id/tvAddress"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tvAddress"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@+id/btnMore"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/labelView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/tvMessage"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            style="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tvMessage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/address_compromised"
            android:textColor="@color/fg_error"
            app:layout_constraintTop_toBottomOf="@+id/tvAddress"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnMore"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>