<resources>

    <style name="ParentTheme"/>

    <style name="ParentTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar"/>

    <style name="ParentTheme.Dark" parent="Theme.MaterialComponents.NoActionBar"/>

    <style name="ParentTheme.Black" parent="Theme.MaterialComponents.NoActionBar"/>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="AppTheme.Light">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Light" parent="ParentTheme.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="invertedColor">@color/colorInverted</item>
        <item name="invertedColorAlpha">@color/colorInvertedAlpha</item>
        <item name="invertedColorAlpha2">@color/colorInvertedAlpha2</item>
        <item name="invertedColorAlternate">@color/colorInvertedAlternate</item>
        <item name="invertedColorAlternate2">@color/colorInvertedAlternate2</item>
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="colorNavigationDefault">@color/colorInvertedAlpha2</item>
        <item name="colorNavigationActive">@color/colorInverted</item>
        <item name="colorCardActive">@color/colorActive</item>
        <item name="colorBgItemDrawer">@color/colorTextDark</item>
        <item name="colorItemDrawer">@color/colorTextDark2nd</item>
        <item name="colorMenu">@color/color_eth</item>
    </style>

    <style name="AppTheme.Dark" parent="ParentTheme.Dark">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkThemeDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="invertedColor">@color/colorInvertedDarkTheme</item>
        <item name="invertedColorAlpha">@color/colorInvertedDarkThemeAlpha</item>
        <item name="invertedColorAlpha2">@color/colorInvertedDarkThemeAlpha2</item>
        <item name="invertedColorAlternate">@color/colorInvertedDarkThemeAlternate</item>
        <item name="invertedColorAlternate2">@color/colorInvertedDarkThemeAlternate2</item>
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="colorNavigationDefault">@color/colorInvertedDarkThemeAlpha2</item>
        <item name="colorNavigationActive">@color/colorInvertedDarkTheme</item>
        <item name="colorCardActive">@color/colorInvertedDarkTheme</item>
        <item name="colorBgItemDrawer">@color/colorTextLight</item>
        <item name="colorItemDrawer">@color/colorTextLight2nd</item>
        <item name="colorMenu">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Black" parent="ParentTheme.Black">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlackDark</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="invertedColor">@color/colorInvertedBlackTheme</item>
        <item name="invertedColorAlpha">@color/colorInvertedBlackThemeAlpha</item>
        <item name="invertedColorAlpha2">@color/colorInvertedBlackThemeAlpha2</item>
        <item name="invertedColorAlternate">@color/colorInvertedBlackThemeAlternate</item>
        <item name="invertedColorAlternate2">@color/colorInvertedBlackThemeAlternate2</item>
        <item name="android:windowBackground">@color/colorPrimaryBlack</item>
        <item name="colorNavigationDefault">@color/colorInvertedBlackThemeAlpha2</item>
        <item name="colorNavigationActive">@color/colorInvertedBlackTheme</item>
        <item name="colorCardActive">@color/colorInvertedBlackTheme</item>
        <item name="colorBgItemDrawer">@color/colorTextLight</item>
        <item name="colorItemDrawer">@color/colorTextLight2nd</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="DatePickerSpinner">
        <item name="android:textSize">22sp</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="BottomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimations</item>
    </style>

    <style name="BottomDialogAnimations" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="My.Widget.Button.Borderless.Small" parent="@android:style/Widget.Material.Button.Borderless.Small">
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="My.Widget.Button.Borderless" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.HintTextAlt" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.HintTextAlt</item>
        <item name="boxStrokeColor">?attr/colorControlNormal</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
</resources>
